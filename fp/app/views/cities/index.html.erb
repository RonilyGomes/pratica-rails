<p id="notice"><%= notice %></p>

<h1>Cities</h1>

<table class="table">
  <thead>
    <tr align="center">
      <th>Nome</th>
      <th>Ibge</th>
      <th>Ddd</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.nome %></td>
        <td><%= city.ibge %></td>
        <td align="center"><%= city.ddd %></td>
        <td><%= link_to 'Show', city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

